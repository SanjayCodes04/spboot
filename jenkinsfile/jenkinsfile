pipeline {
    agent any

    environment {
        MVN_HOME = tool 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/SanjayCodes04/spboot.git'
            }
        }

        stage('Build') {
            steps {
                // Building the Spring Boot project using Maven
                sh "${MVN_HOME}/bin/mvn clean package"
            }
        }

        stage('Deploy') {
            steps {
               
                script {
                    def warFile = sh(script: 'ls target/*.war', returnStdout: true).trim()
                    echo "Found WAR file: ${warFile}"
                    echo "WAR file location: ${warFile}"

                }
            }
        }
    }

    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed. Please check the logs for details.'
        }
    }
}
